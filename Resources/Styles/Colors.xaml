<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- PS5-inspired palette: cool whites + deep navy + electric blue accent -->
    <Color x:Key="Primary">#0070F3</Color>
    <Color x:Key="PrimaryDark">#69B3FF</Color>
    <Color x:Key="PrimaryDarkText">#0B1020</Color>

    <Color x:Key="Secondary">#D6ECFF</Color>
    <Color x:Key="SecondaryDarkText">#0B1020</Color>
    <Color x:Key="Tertiary">#0B1020</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#07122A</Color>
    <Color x:Key="OffBlack">#0B0F1A</Color>

    <Color x:Key="Gray100">#EEF3F9</Color>
    <Color x:Key="Gray200">#DCE3EE</Color>
    <Color x:Key="Gray300">#C0CAD8</Color>
    <Color x:Key="Gray400">#9AA7B8</Color>
    <Color x:Key="Gray500">#738196</Color>
    <Color x:Key="Gray600">#3D4552</Color>
    <Color x:Key="Gray900">#151A23</Color>
    <Color x:Key="Gray950">#0B1020</Color>

    <!-- Surfaces (light: cool white; dark: deep navy) -->
    <Color x:Key="Surface">#F3F7FF</Color>
    <Color x:Key="Surface2">#FFFFFF</Color>
    <Color x:Key="SurfaceDark">#070B14</Color>
    <Color x:Key="Surface2Dark">#0B1020</Color>
    <Color x:Key="Outline">#D3DDEE</Color>
    <Color x:Key="OutlineDark">#1B2A4B</Color>
    <Color x:Key="OnSurface">#0B1020</Color>
    <Color x:Key="OnSurfaceDark">#EAF1FF</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}"/>
    <SolidColorBrush x:Key="Surface2Brush" Color="{StaticResource Surface2}"/>
    <SolidColorBrush x:Key="SurfaceDarkBrush" Color="{StaticResource SurfaceDark}"/>
    <SolidColorBrush x:Key="Surface2DarkBrush" Color="{StaticResource Surface2Dark}"/>
</ResourceDictionary>